
verstr=texlive-bin-2012.`date +%Y%m%d`
pkgstr=texlive-bin_2012.`date +%Y%m%d`
if [ -r $verstr ] ; then
  echo "already existing: $verstr, exit!"
  exit 1
fi
echo "copying"
cp -a /src/TeX/texlive-svn/Build/source $verstr
rm -rf $verstr/inst
rm -rf $verstr/Work
rm -rf $verstr/utils/biber/bin
#
# remove system libraries
for i in freetype2 gd graphite libpng poppler xpdf zlib ; do
  rm -rf $verstr/libs/$i
done
find $verstr -name \.svn -exec rm -rf '{}' \;
find $verstr -name autom4te.cache -exec rm -rf '{}' \;

echo "packing up"
tar -cJf $pkgstr.orig.tar.xz $verstr

